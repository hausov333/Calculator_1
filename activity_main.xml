<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/action_button"
                android:text="AC"
                android:orientation="horizontal"
                android:id="@+id/b_AC"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="("
                android:orientation="horizontal"
                android:id="@+id/b_skl"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text=")"
                android:orientation="horizontal"
                android:id="@+id/b_skr"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="/"
                android:orientation="horizontal"
                android:id="@+id/b_div"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/number_button"
                android:text="7"
                android:orientation="horizontal"
                android:id="@+id/b_7"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="8"
                android:orientation="horizontal"
                android:id="@+id/b_8"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="9"
                android:orientation="horizontal"
                android:id="@+id/b_9"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="*"
                android:orientation="horizontal"
                android:id="@+id/b_umn"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/number_button"
                android:text="4"
                android:orientation="horizontal"
                android:id="@+id/b_4"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="5"
                android:orientation="horizontal"
                android:id="@+id/b_5"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="6"
                android:orientation="horizontal"
                android:id="@+id/b_6"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="+"
                android:orientation="horizontal"
                android:id="@+id/b_sum"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/number_button"
                android:text="1"
                android:id="@+id/b_1"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="2"
                android:orientation="horizontal"
                android:id="@+id/b_2"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="3"
                android:orientation="horizontal"
                android:id="@+id/b_3"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="-"
                android:orientation="horizontal"
                android:id="@+id/b_min"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/number_button"
                android:text="."
                android:orientation="horizontal"
                android:id="@+id/b_tochka"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/number_button"
                android:text="0"
                android:orientation="horizontal"
                android:id="@+id/b_0"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="back"
                android:orientation="horizontal"
                android:id="@+id/b_back"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                style="@style/action_button"
                android:text="="
                android:orientation="horizontal"
                android:id="@+id/b_ravn"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
